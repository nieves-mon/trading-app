<div class="container mt-4">
<div class="row d-flex justify-content-center border px-4 py-4 rounded-4 bg-light">

<h1>Trending Stocks</h1>
<hr/>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Symbol</th>
            <th scope="col">Name</th>
            <th scope="col">Latest Price</th>
            <th scope="col">Change</th>
        </tr>
    </thead>
    <tbody>
        <% @trending_stocks.each do |stock| %>
            <tr>
                <th scope="row">
                    <%= link_to stock.symbol, search_stock_path(symbol: stock.symbol), data: { turbo_method: "post" } %>
                </th>
                <td><%= stock.company_name %></td>
                <td>$<%= stock.latest_price %></td>
                <td><%= stock.change_percent_s %></td>
            </tr>
        <% end %>
    </tbody>
</table>

</div>
</div>
