<div class="container mt-4">
    <div class="row d-flex justify-content-center border border-secondary px-4 py-4 rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-auto">
                    <h1>My Portfolio</h1>
                </div>
                <div class="col-md-auto">
                    <%= link_to "+ Buy Stock", new_stock_path, class: "btn btn-primary"%>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Symbol</th>
                    <th scope="col">Name</th>
                    <th scope="col">Shares</th>
                    <th scope="col">Latest Price</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Change %</th>
                    <th scope="col" colspan=2></th>
                </tr>
            </thead>
            <tbody>
                <% @user_stocks.each_with_index do |user_stock, i| %>
                    <tr>
                        <th scope="row">
                            <%= link_to user_stock.stock.symbol, search_stock_path(symbol: user_stock.stock.symbol), data: { turbo_method: "post" } %>
                        </th>
                        <td><%= user_stock.stock.name %></td>
                        <td><%= user_stock.quantity %></td>
                        <td>$<%= @quotes[i].latest_price %></td>
                        <td>$<%= (user_stock.quantity * @quotes[i].latest_price).round(2) %></td>
                        <td><%= @quotes[i].change_percent_s %></td>
                        <td><%= link_to "Buy", buy_stock_path(user_stock.stock.symbol), class: "btn btn-success" %></td>
                        <td><%= link_to "Sell", sell_stock_path(user_stock.stock.symbol), class: "btn btn-danger" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>
