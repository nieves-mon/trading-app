<%= form_with(scope: @stock, url: search_stock_path, data: { turbo: false }) do |f| %>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <%= f.text_field :symbol, onkeyup: "this.value = this.value.toUpperCase();", placeholder: "AMZN, TSLA, ..." %>
        </div>
        <div class="col-auto">
            <%= f.submit "Search Stock", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>
