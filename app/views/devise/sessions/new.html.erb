<div class="container mt-5">
<div class="row d-flex justify-content-center">
<div class="col-md-6">
<div class="border rounded-4 bg-light px-4 py-4" id="form1">

<h2 class="fw-bold">Log in</h2>
<hr/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example1", class:"form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", id:"form2Example2", class:"form-control" %>
  </div>

  <div class="row mb-4">

    <div class="col d-flex justify-content-left">
      <% if devise_mapping.rememberable? %>
      <div class="form-check">
          <%= f.check_box :remember_me, class:"form-check-input", id:"form2Example31" %>
          <%= f.label :remember_me, class:"form-check-label" %>
      </div>
      <% end %>
    </div>


  </div>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>
