<div>
<div class="form-container-container">
<div class="form-container">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example1", class:"form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", id:"form2Example2", class:"form-control" %>
  </div>

  <div class="row mb-4">

    <div class="col d-flex justify-content-center">
      <% if devise_mapping.rememberable? %>
      <div class="form-check">
          <%= f.check_box :remember_me, class:"form-check-input", id:"form2Example31" %>
          <%= f.label :remember_me, class:"form-check-label" %>
      </div>
      <% end %>
    </div>

    <div class="col">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end %>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>