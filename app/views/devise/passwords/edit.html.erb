<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <div class="border rounded-4 bg-light px-4 py-4" id="form1">
        <h2 class="fw-bold">Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>


          <div class="form-outline mb-4 field">
            <%= f.label :password, "New password", class:"form-label fw-semibold" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-outline mb-4 field">
            <%= f.label :password_confirmation, "Confirm new password", class:"form-label fw-semibold" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="d-grid gap-2 col-6 mx-auto">
            <%= f.submit "Change my password", class:"btn btn-primary btn-block mb-4 fw-semibold" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
