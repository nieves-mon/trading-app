<div class="container mt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="row d-flex justify-content-center border px-4 py-4 rounded-4 bg-light">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-auto">
                            <h1 class="fw-bold">Account Details</h1>
                        </div>
                        <div class="col-md-auto">
                            <%= link_to "Edit", edit_account_path(@account), class:"btn btn-warning" %>
                            <%= link_to "Delete", account_path(@account), data: { turbo_method: :delete, turbo_confirm: "Are you sure to proceed?" }, class:"btn btn-danger" %>
                        </div>
                    </div>
                    <hr/>
                </div>
                <table class="table">
                    <tr>
                        <td><b>Email:</b></td>
                        <td><%= @account.email %></td>
                    </tr>

                    <% if @account.approved? %>
                        <tr>
                            <td><b>Account Status:</b></td>
                            <td>Approved</td>
                        </tr>

                        <tr>
                        <td><b>Confirmation Status:</b></td>
                        <td><%= @account.confirmed_at.in_time_zone('Singapore').strftime("%b %d, %Y @ %l:%M %p") %></td>
                        </tr>

                    <% else %>
                        <tr>
                            <td><b>Account Status:</b></td>
                            <td>Pending</td>
                        </tr>

                        <tr>
                        <td><b>Confirmation Status:</b></td>
                        <td>
                            <% if @account.confirmed_at == nil %>
                                Unconfirmed
                            <% else %>
                                <%= @account.confirmed_at.in_time_zone('Singapore').strftime("%b %d, %Y @ %l:%M %p") %>
                            <% end %>
                        </td>
                        </tr>
                    <% end %>

                </table>

            </div>
        </div>
    </div>
</div>
