<div class="container mt-4">
<div class="row d-flex justify-content-center border border-secondary px-4 py-4 rounded">
<h1> Pending Accounts</h1>
<hr/>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
        </tr>
    <thead>
    <% @accounts.each do |account| %>

    <tr>
    <td><%= account.email %></td>
    <td><%= link_to "Approve", approve_account_path(account), data: { turbo_method: :patch }, class:"btn btn-success" %>
    </tr>

    <% end %>
</table>

</div>
</div>