<div class="row align-items-center justify-content-center">
    <div class="col-md-auto text-center">
        <h1><%= stock.symbol %></h1>
    </div>
</div>
<div class="row align-items-center justify-content-center">
    <div class="col-md-auto text-center">
        <h5><%= stock.name %></h5>
    </div>
</div>

<hr/>

<%= form_with(scope: @transaction, url: save_transaction_path) do |f| %>
    <%= f.hidden_field :stock_id, value: stock.id %>
    <%= f.hidden_field :kind, {value: kind} %>
    <%= f.hidden_field :price, value: @quote.latest_price %>

    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <span>Price</span>
        </div>
        <div class="col-auto">
            <span>$<%= @quote.latest_price %></span>
        </div>
    </div>

    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <%= f.label :quantity, class: "form-label" %>
        </div>
        <div class="col-auto">
            <%= f.number_field :quantity, class: "form-control", min: 1, value: 1 %>
        </div>
    </div>

    <div class="mb-3">
        <%= f.submit "Buy", class: "btn btn-success" %>
    </div>
<% end %>
